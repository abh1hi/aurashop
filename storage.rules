rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /kyc/{userId}/{allPaths=**} {
      // Only the user can write to their own folder
      allow write: if request.auth != null && request.auth.uid == userId;
      // Only the user or an admin can read the files
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
    }
    
    match /products/{storeId}/{allPaths=**} {
      // Allow any authenticated user to upload product images for now
      // Ideally, we should check if the user owns the store, but that requires custom claims or Firestore lookup
      allow read: if true; // Public read access for product images
      allow write: if request.auth != null;
    }
  }
}
